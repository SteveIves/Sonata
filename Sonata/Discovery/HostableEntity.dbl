import System
import System.ComponentModel
import Sonata.Interface.Tools

namespace Sonata.Discovery

	public abstract class HostableEntity extends NotifyPropertyChangedProvider
	
		private mName, String
		private mDescription, String
		private mSubSystem, String
		
		;;This constructor is here to facilitate serialization.
		;;It should not be used by Sonata
		public method HostableEntity
			endparams
		proc
			
		endmethod
		
		public method HostableEntity
			required in aName, String
			required in aDescription, String
			required in aSubSystem, String
			endparams
		proc
			mName = aName
			mDescription = aDescription
			mSubSystem = aSubSystem
		endmethod
		
		public property Name, String
			method get
			proc
				mreturn mName
			endmethod
			method set
			proc
				mName = value
				NotifyPropertyChanged("Name")
			endmethod
		endproperty
		
		public property Description, String
			method get
			proc
				mreturn mDescription
			endmethod
			method set
			proc
				mDescription = value
				NotifyPropertyChanged("Description")
			endmethod
		endproperty
		
		public property SubSystem, String
			method get
			proc
				mreturn mSubSystem
			endmethod
			method set
			proc
				mSubSystem = value
				NotifyPropertyChanged("SubSystem")
			endmethod
		endproperty
		
	endclass

endnamespace
